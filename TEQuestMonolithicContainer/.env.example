# Django settings
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Secret key (set a secure one in real deployments)
# NOTE: The app has a default for development; override for production.
DJANGO_SECRET_KEY=CHANGE_ME_SECURE_SECRET

# Debug toggle (false for production)
DJANGO_DEBUG=false

# Site URL for password reset links (frontend URL)
SITE_URL=http://localhost:3000
PASSWORD_RESET_PATH=/reset-password

# Email configuration (use your SMTP service)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@example.com

# Admin auto-creation (optional but recommended for deploys)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=StrongAdminPass123

# Database (Postgres via docker-compose)
POSTGRES_DB=tequest
POSTGRES_USER=tequest
POSTGRES_PASSWORD=tequestpassword
POSTGRES_PORT=5432

# DATABASE_URL used by settings override in Docker context
# Format: postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgres://tequest:tequestpassword@db:5432/tequest

# Port mapping for web container
WEB_PORT=3000
