# Django settings
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Admin superuser auto-creation (optional but recommended for deployments)
# If all three are set, a Django superuser will be created automatically at startup
# and can be enforced explicitly via: python manage.py ensure_superuser
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeThisStrongPassword123!

# Email settings (update to your SMTP provider)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@example.com

# Site URL used in emails for password reset links
SITE_URL=http://localhost:3000
# Frontend route for password reset page
PASSWORD_RESET_PATH=/reset-password
