# Django secret and site settings
DJANGO_SECRET_KEY=replace-me
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# Site URL used in emails (React or same server)
SITE_URL=http://localhost:3000
